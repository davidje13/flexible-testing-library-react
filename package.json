{
  "name": "flexible-testing-library-react",
  "version": "1.0.0",
  "description": "a more flexible wrapper around @testing-library/react",
  "files": [
    "build/**/*",
    "extend-expect/**/*"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": "./build/index.js",
    "./extend-expect": "./extend-expect/index.js"
  },
  "scripts": {
    "build": "rm -rf build && rollup --config rollup.config.mjs",
    "format": "prettier --write .",
    "lint": "tsc && prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidje13/flexible-testing-library-react.git"
  },
  "keywords": [
    "testing",
    "react",
    "ui",
    "dom",
    "jsdom",
    "unit",
    "integration",
    "functional",
    "end-to-end",
    "e2e"
  ],
  "author": "David Evans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidje13/flexible-testing-library-react/issues"
  },
  "homepage": "https://github.com/davidje13/flexible-testing-library-react#readme",
  "dependencies": {
    "@testing-library/dom": "*",
    "@testing-library/react": "*"
  },
  "devDependencies": {
    "@babel/core": "7.x",
    "@babel/preset-env": "7.x",
    "@babel/preset-react": "7.x",
    "@babel/preset-typescript": "7.x",
    "@rollup/plugin-node-resolve": "15.x",
    "@rollup/plugin-typescript": "11.x",
    "@tsconfig/strictest": "2.x",
    "@types/jest": "29.x",
    "@types/react": "18.x",
    "@types/react-dom": "18.x",
    "jest": "29.x",
    "jest-environment-jsdom": "29.x",
    "prettier": "3.0.2",
    "react": "18.x",
    "react-dom": "18.x",
    "tslib": "*",
    "typescript": "4.6.x",
    "rollup": "3.x"
  }
}
