{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "types": ["node", "jest"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["src", "test"]
}
